<?xml version="1.0" encoding="utf-8"?>
<!-- 滑动的中间区域 -->
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <!-- 第一列 TextView -->
        <TextView
                android:text="---------------【项目介绍】---------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView0"
                android:gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:text="加载中..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dy_project_info"
                android:layout_weight="1"/>



        <TextView
                android:text="---------------【项目安装】---------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:gravity="center"
                android:layout_weight="1"/>

        <TextView
                android:text="加载中..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dy_project_upset"
                android:layout_weight="1"
                android:padding="?attr/dialogPreferredPadding"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/dy_battery_layout"
                android:visibility="visible">

            <Button
                    android:text="打开抖音"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dy_project_upset_opendy"/>

            <Button
                    android:text="电池优化"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dy_project_upset_battery"/>

            <Button
                    android:text="省电策略"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/dy_project_upset_appinfoset"/>

        </LinearLayout>


        <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_weight="1"/>

        <TextView
                android:text="---------------【项目运行】---------------"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="center"
                android:layout_weight="1"/>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:text="加载中..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dy_project_status"
                android:layout_weight="1"
                android:padding="?attr/dialogPreferredPadding"/>


    </LinearLayout>


</ScrollView>

